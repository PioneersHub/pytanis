{
	"name": "pytanis",
	"image": "mcr.microsoft.com/devcontainers/python:3.12",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"ms-toolsai.jupyter-keymap",
				"ms-toolsai.jupyter-renderers",
				"eamodio.gitlens"
			]
		},
		"settings": {
			"python.defaultInterpreterPath": "/usr/local/bin/python",
			"jupyter.jupyterServerType": "local"
		}
	},
	"postCreateCommand": "apt update && apt install -y pipx && pipx install hatch && pipx install pre-commit && pipx install hatch-pip-compile && hatch config set dirs.env.virtual .direnv",
	"mounts": [
		"type=bind,source=${localEnv:HOME}/.ssh,target=/root/.ssh"
	],
	"remoteUser": "root"
}
